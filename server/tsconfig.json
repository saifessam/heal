{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "types": ["node"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
